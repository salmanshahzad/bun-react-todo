{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "bun-react-todo",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "run-p build:client build:server",
        "build:client": "bunx --bun vite build",
        "build:server": "bun build --compile --external drizzle-orm --minify --sourcemap --target bun server/index.ts --outfile app",
        "check": "run-s lint typecheck",
        "db:generate": "bunx drizzle-kit generate",
        "db:migrate": "bunx --bun drizzle-kit migrate",
        "dev": "run-p dev:client dev:server",
        "dev:client": "bunx --bun vite dev",
        "dev:server": "bun run --watch server/index.ts",
        "lint": "bunx --bun biome check --write",
        "start": "bun run server/index.ts",
        "typecheck": "bunx --bun tsc"
    },
    "dependencies": {
        "drizzle-orm": "^0.34.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.3",
        "@hono/swagger-ui": "^0.4.1",
        "@hono/zod-openapi": "^0.16.4",
        "@tanstack/react-query": "^5.59.9",
        "@tsconfig/bun": "^1.0.7",
        "@tsconfig/strictest": "^2.0.5",
        "@types/bun": "^1.1.11",
        "@types/http-status-codes": "^1.2.0",
        "@types/node": "^22.7.5",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.2",
        "autoprefixer": "^10.4.20",
        "classnames": "^2.5.1",
        "daisyui": "^4.12.13",
        "drizzle-kit": "^0.25.0",
        "hono": "^4.6.3",
        "http-status-codes": "^2.3.0",
        "npm-run-all2": "^6.2.3",
        "postcss": "^8.4.47",
        "postgres": "^3.4.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.53.0",
        "react-icons": "^5.3.0",
        "redis": "^4.7.0",
        "reflect-metadata": "^0.2.2",
        "tailwindcss": "^3.4.13",
        "tsyringe-neo": "^5.0.3",
        "typescript": "^5.6.3",
        "vite": "^5.4.8",
        "winston": "^3.15.0",
        "wouter": "^3.3.5",
        "zod": "^3.23.8",
        "zustand": "^5.0.0-rc.2"
    }
}
